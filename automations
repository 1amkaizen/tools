banner(){
echo -e "${BRed}"
echo -e -ne "\t\t\t\t\t\t\tAutomations" | figlet -f slant
echo -e -ne "${BRed}\t\t<================${BWhite}$date${BRed}================>\n"
}
clear
banner
list
while true
do
PS2=${BBlue}'â”Œâ”€â”€('${BRed}'ChooseðŸ’€Options'${BBlue}')-['']\nâ””â”€'${BRed}'# '${BWhite}
