lima=5
help(){
echo
echo -e "help         help"
echo -e "list         list"
echo -e "clear        clear screen"
echo -e "banner       banner"
echo
}
date=`date`
list(){
echo
echo -e -ne "\t\t\t\t\t${BBlue}ðŸ’€:: ${BRed}0.Exit\n"
